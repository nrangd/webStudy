<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>shark</display-name>
  
  <servlet>
  	<servlet-name>frontController</servlet-name>
  	<servlet-class>shark.servlet.FrontController</servlet-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>UTF-8</param-value>
  	</init-param>
  </servlet>
  
  <!-- /assets/ 밑의 경로로 자원들에 접근하는 요청들은 default 서블릿으로 매핑 -->
  <servlet-mapping>
  	<servlet-name>default</servlet-name>
  	<url-pattern>/assets/*</url-pattern>
  </servlet-mapping>
  
  <!-- /WEB-INF/views/ 밑에 있는 .jsp들은 jsp 서블릿으로 매핑 -->
  <servlet-mapping>
  	<servlet-name>jsp</servlet-name>
  	<url-pattern>/WEB-INF/views/*</url-pattern>
  </servlet-mapping>

  <!-- 그 외 .jsp들은 그냥 접속을 시도한것으로 간주하여 frontController로 매핑 -->
  <servlet-mapping>
  	<servlet-name>frontController</servlet-name>
  	<url-pattern>*.jsp</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>frontController</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>myFilter1</filter-name>
  	<filter-class>shark.filter.MyFilter1</filter-class>
  	<init-param>
  		<param-name>initValue</param-name>
  		<param-value>10</param-value>
  	</init-param>
  </filter>
  
  <filter>
  	<filter-name>encodingFilter</filter-name>
  	<filter-class>shark.filter.CharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  
  <filter-mapping>
  	<filter-name>encodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
  	<filter-name>myFilter1</filter-name>
  	<url-pattern>/el_jstl/jstl</url-pattern>
  </filter-mapping>
</web-app>